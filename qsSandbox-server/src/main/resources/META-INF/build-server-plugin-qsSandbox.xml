<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-autowire="constructor">

  <bean id="sandboxBuildStartContextProcessor" class="com.quali.teamcity.plugins.qsSandbox.server.runner.SandboxBuildStartContextProcessor" init-method="register"/>

  <!-- CloudShell build feature -->
  <bean class="com.quali.teamcity.plugins.qsSandbox.server.admin.QsSandboxBean"/>
  <bean class="com.quali.teamcity.plugins.qsSandbox.server.feature.QsSandboxBuildFeature"/>
  <bean class="com.quali.teamcity.plugins.qsSandbox.server.feature.QsSandboxPasswordsProvider" id="qsSandboxPasswordsProvider"/>

  <!-- CloudShell build runner -->
  <bean class="com.quali.teamcity.plugins.qsSandbox.server.runner.SandboxRunnerRunType"/>

  <!-- CloudShell server settings -->
  <bean id="sandboxAdminSettings" class="com.quali.teamcity.plugins.qsSandbox.server.SandboxAdminSettings" init-method="init"/>
  <bean id="sandboxAdminPage" class="com.quali.teamcity.plugins.qsSandbox.server.admin.SandboxAdminPage"/>
  
  <bean id="sandboxSettingsController" class="com.quali.teamcity.plugins.qsSandbox.server.admin.SandboxSettingsController"/>

</beans>